<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" media="screen" charset="utf-8">
    <link href="{{ app.request.getbaseurl }}/assets/css/styles.css" rel="stylesheet" type="text/css">
    <title>Address Book</title>
</head>
<body>
    <div class="container">
        <h1>Address Book</h1>

        <h3>Create new contact:</h3>
        <div class="form-group">
            <form action='/create_contacts' method='post'>
                <label for='name'> Enter Name:</label>
                <input id='name' name='name' type='text'>
                <br>
                <br>
                <label for='phone'> Enter Phone #:</label>
                <input id='phone' name='phone' type='text'><br>
                <br>
                <label for='address'> Enter Address:</label>
                <input id='address' name='address' type='text'><br>
                <br>
                <button id="submit" type='submit' class="btn btn-info">Submit</button>
            </form>
            <br>
            <form action='/delete_contacts' method='post'>
                <button id="clear" type='submit' class="btn btn-danger">Clear</button>
            </form>
        </div>

        {% if contacts is not empty %}
        <p>Here are all your contacts:</p>
        <ul>
            {% for contact in contacts %}
            <li>{{ contact.getName }}</li>
            <li>{{ contact.getPhone }}</li>
            <li>{{ contact.getAddress }}</li>
            {% endfor %}
        </ul>
        {% endif %}
    </div>
</body>
</html>
